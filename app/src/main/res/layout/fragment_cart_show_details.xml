<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyFragments.Cart.CartShowDetailsFrg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/CardViews2">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/checkouticon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="سفارش(های) شما :"
            style="@style/HeaderText"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CardViews2">

            <TextView
                android:id="@+id/cartshowdetailtvorders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="کفش تنتاک سرمه ای\nدمپایی همیار تن\nکتانی زنانه مدل فندی"
                android:layout_marginRight="8dp"
                style="@style/DetailText"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نام گیرنده :‌"
            style="@style/HeaderText"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CardViews2">

            <TextView
                android:id="@+id/cartshowdetailtvnamefamily"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="علی یزدانی فر"
                android:layout_margin="8dp"
                style="@style/DetailText"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="در آدرس :"
            style="@style/HeaderText"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CardViews2">

            <TextView
                android:id="@+id/cartshowdetailtvaddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="لرستان - ازنا - اصغرآباد - خیابان فدائیان اسلام - کوچه ی شهید غلامرضا بیات - پلاک 55653"
                android:layout_margin="8dp"
                style="@style/DetailText"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" اطلاعات تماس :"
            style="@style/HeaderText"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CardViews2">

            <TextView
                android:id="@+id/cartshowdetailtvtellandemail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+98 939 168 1434 \n ali.yazdani324@gmail.com"
                android:layout_margin="8dp"
                style="@style/DetailText"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="روش پرداخت :"
            style="@style/HeaderText"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CardViews2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="پرداخت به صورت آنلاین"
                android:layout_margin="8dp"
                style="@style/DetailText"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مبلغ کل : "
            style="@style/HeaderText"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CardViews2">

            <TextView
                android:id="@+id/txtcshodetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="مبلغ کل"
                android:layout_margin="8dp"
                style="@style/DetailText"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="توضیحات خریدار :"
            style="@style/HeaderText"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CardViews2">

            <TextView
                android:id="@+id/cartshowdetailtvdescr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                style="@style/DetailText"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>


</FrameLayout>