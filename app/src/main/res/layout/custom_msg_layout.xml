<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/custom_msg_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slider_height"
        android:scaleType="fitXY"
        android:src="@drawable/shoe2" />

    <TextView
        android:id="@+id/custom_msg_txttitle"
        style="@style/HeaderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:text="@string/app_name" />

    <Button
        android:id="@+id/custom_msg_btnpositive"
        style="@style/btnSucces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="مشاهده" />

    <Button
        android:id="@+id/custom_msg_btncancel"
        style="@style/btnWarningback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="بستن" />

</LinearLayout>