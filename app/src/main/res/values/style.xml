<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="elevation">15dp</item>

        <item name="colorButtonNormal">@color/gray</item>

        <item name="android:colorLongPressedHighlight">#f01</item>

        <item name="color">@color/colorPrimaryDark</item>

        <item name="colorControlHighlight">@color/colorPrimary</item>
        <!--<item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>-->
    </style>

    <!--<style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">-->
        <!--<item name="android:activityOpenEnterAnimation">@anim/slide_in_back_from_right</item>-->
        <!--<item name="android:activityOpenExitAnimation">@anim/slide_out_back_to_left</item>-->
        <!--<item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>-->
        <!--<item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>-->
    <!--</style>-->

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="CardViews" parent="CardView">
        <item name="background">@drawable/ripple_light</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">3dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>


    <style name="CardViews2" parent="CardView">
        <item name="android:background">@color/light</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">3dp</item>
        <item name="android:layout_margin">8dp</item>

        <item name="cardUseCompatPadding">true</item>

    </style>

    <style name="EditTexts" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:background">@drawable/edittextlayout</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="HeaderText" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/head_text_size</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="CategoryTexts" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">@dimen/head_text_size_for_small_fonts</item>
        <item name="android:textColor">#DA646464</item>
    </style>

    <style name="DetailText" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/tablet_detail_text_size</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="tabletHeaderText" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/tablet_head_text_size</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="tabletDetailText" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/detail_text_size</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="btnSucces">

        <item name="android:background">@drawable/btn_success_layout</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:textStyle">bold</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="elevation">5dp</item>

    </style>
  <style name="btnGlass">

        <item name="android:background">@drawable/btn_glass_layout</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="elevation">5dp</item>

    </style>

    <style name="btnWarningback" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_warning_layout</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">5dp</item>
    </style>

    <style name="btnDangerback" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_danger_layout</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">5dp</item>

    </style>


</resources>